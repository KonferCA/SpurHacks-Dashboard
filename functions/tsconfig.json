{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "./lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"include": ["src", "src/**/*.ts", "src/*.ts"],
	"exclude": ["node_modules"]
}
